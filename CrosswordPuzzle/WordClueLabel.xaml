<UserControl x:Class="CrosswordPuzzle.WordClueLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrosswordPuzzle"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <UserControl.Resources>
        <ResourceDictionary Source="resources.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="0,0,0,0.5">
            <TextBlock Margin="5,13" Name="ClueLabel" Style="{StaticResource clue}"/>
        </Border>
    </Grid>
</UserControl>
